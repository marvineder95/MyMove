# MyMove Environment Configuration
# Copy this file to .env and adjust values for your environment

# ============================================================
# DATABASE CONFIGURATION
# ============================================================
MYSQL_DATABASE=mymove
MYSQL_USER=mymove
MYSQL_PASSWORD=mymove
MYSQL_ROOT_PASSWORD=root

# ============================================================
# BACKEND CONFIGURATION
# ============================================================

# Spring Profile (docker, mock-ai, prod)
SPRING_PROFILES_ACTIVE=docker,mock-ai

# Database connection (usually no need to change when using docker-compose)
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/mymove?useUnicode=true&characterEncoding=utf8&serverTimezone=UTC&allowPublicKeyRetrieval=true&useSSL=false
SPRING_DATASOURCE_USERNAME=mymove
SPRING_DATASOURCE_PASSWORD=mymove

# JPA DDL Mode
# - update: Auto-create/update schema (development)
# - validate: Validate schema, don't modify (production)
# - none: Do nothing
SPRING_JPA_HIBERNATE_DDL_AUTO=update

# Storage Paths (inside container)
MYMOVE_VIDEO_STORAGE_BASE_DIR=/app/data/videos
MYMOVE_STORAGE_TRADE_LICENSES=/app/uploads/trade-licenses

# Admin Credentials
# ⚠️ CHANGE THESE IN PRODUCTION!
MYMOVE_ADMIN_EMAIL=admin@mymove.at
MYMOVE_ADMIN_PASSWORD=admin123

# ============================================================
# AI SERVICE CONFIGURATION
# ============================================================

# Mock AI (for development)
AI_SERVICE_URL=http://mock-ai:8000

# Real AI Service (when ready)
# AI_SERVICE_URL=http://ai-service:8000

# ============================================================
# PORT CONFIGURATION
# ============================================================

# Host ports (change if ports are already in use)
BACKEND_PORT=8080
MYSQL_PORT=3306

# ============================================================
# OPTIONAL: PRODUCTION SETTINGS
# ============================================================

# For production, use these settings:
# SPRING_PROFILES_ACTIVE=docker,prod
# SPRING_JPA_HIBERNATE_DDL_AUTO=validate
# MYMOVE_ADMIN_PASSWORD=<strong-password>
